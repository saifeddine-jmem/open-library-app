                {{ book.title }}
              </h3>
              <p *ngIf="book.author_name && book.author_name.length > 0" class="text-xs text-slate-400 line-clamp-1 mb-3">
                by {{ book.author_name[0] }}
              </p>
            </div>

            <!-- Metadata -->
            <div class="flex items-center justify-between text-xs text-slate-500 pt-3 border-t border-slate-700">
              <span *ngIf="book.first_publish_year" class="flex items-center gap-1">
                üìÖ {{ book.first_publish_year }}
              </span>
              <span *ngIf="book.edition_count" class="flex items-center gap-1">
                üìö {{ book.edition_count }} editions
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Pagination -->
    <div *ngIf="totalPages > 1" class="flex justify-center items-center gap-2 mb-8">
      <button
        (click)="goToPage(currentPage - 1)"
        [disabled]="currentPage === 1"
        class="px-4 py-2 bg-slate-700/50 border border-slate-600 text-slate-300 rounded-lg hover:bg-slate-700 disabled:opacity-50 disabled:cursor-not-allowed transition duration-300"
      >
        ‚Üê Prev
      </button>

      <div class="flex gap-2">
        <button
          *ngIf="getPageNumbers()[0] > 1"
          (click)="goToPage(1)"
          class="px-3 py-2 bg-slate-700/50 border border-slate-600 text-slate-300 rounded-lg hover:bg-slate-700 transition duration-300"
        >
          1
        </button>
        <span *ngIf="getPageNumbers()[0] > 2" class="px-2 py-2 text-slate-500">...</span>

        <button
          *ngFor="let page of getPageNumbers()"
          (click)="goToPage(page)"
          [class.bg-blue-500]="page === currentPage"
          [class.border-blue-500]="page === currentPage"
          [class.bg-slate-700/50]="page !== currentPage"
          [class.border-slate-600]="page !== currentPage"
          class="px-3 py-2 border text-slate-300 rounded-lg hover:bg-slate-700 transition duration-300"
        >
          {{ page }}
        </button>

        <span *ngIf="getPageNumbers()[getPageNumbers().length - 1] < totalPages - 1" class="px-2 py-2 text-slate-500">...</span>
        <button
          *ngIf="getPageNumbers()[getPageNumbers().length - 1] < totalPages"
          (click)="goToPage(totalPages)"
          class="px-3 py-2 bg-slate-700/50 border border-slate-600 text-slate-300 rounded-lg hover:bg-slate-700 transition duration-300"
        >
          {{ totalPages }}
        </button>
      </div>

      <button
        (click)="goToPage(currentPage + 1)"
        [disabled]="currentPage === totalPages"
        class="px-4 py-2 bg-slate-700/50 border border-slate-600 text-slate-300 rounded-lg hover:bg-slate-700 disabled:opacity-50 disabled:cursor-not-allowed transition duration-300"
      >
        Next ‚Üí
      </button>
    </div>
  </div>
</section>
```

### Step 4.4: Book Details Component
**File: `src/app/pages/book-details/book-details.component.ts`**
```typescript
import { Component, OnInit } from '@angular/core';
import { ActivatedRoute, Router } from '@angular/router';
import { BookService } from '../../services/book.service';
import { BookDetailsResponse } from '../../models/book.model';

@Component({
  selector: 'app-book-details',
  templateUrl: './book-details.component.html',
  styleUrls: ['./book-details.component.css']
})
export class BookDetailsComponent implements OnInit {
  book: BookDetailsResponse | null = null;
  isLoading = true;
  error: string | null = null;

  constructor(
    private route: ActivatedRoute,
    private router: Router,
    private bookService: BookService
  ) {}

  ngOnInit(): void {
    this.route.params.subscribe(params => {
      const bookId = params['id'];
      if (bookId) {
        this.loadBookDetails(bookId);
      }
    });
  }

  loadBookDetails(bookId: string): void {
    this.isLoading = true;
    this.error = null;

    this.bookService.getBookById(bookId).subscribe({
      next: (data) => {
        this.book = data;
        this.isLoading = false;
      },
      error: (error) => {
        console.error('Error loading book details:', error);
        this.error = 'Failed to load book details. Please try again.';
        this.isLoading = false;
      }
    });
  }

  getDescription(): string {
    if (!this.book?.description) {
      return 'No description available';
    }

    if (typeof this.book.description === 'string') {
      return this.book.description;
    }

    if (typeof this.book.description === 'object' && 'value' in this.book.description) {
      return this.book.description.value || 'No description available';
    }

    return 'No description available';
  }

  getCoverUrl(): string {
    if (this.book?.covers && this.book.covers.length > 0) {
      return this.bookService.getCoverUrl(this.book.covers[0], 'L');
    }
    return 'assets/placeholder-book.png';
  }

  goBack(): void {
    this.router.navigate(['/']);
  }

  getAuthorsString(): string {
    if (!this.book?.authors) {
      return 'Unknown Author';
    }
    return this.book.authors.map(a => a.name).join(', ');
  }
}
```

